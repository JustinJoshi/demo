            <nav class="sidebar-nav">
                <div class="nav-section">
                    <div class="nav-section-title">Main</div>
                    <a href="/dashboard" class="nav-item active">
                        <span>üè†</span>
                        <span>Dashboard</span>
                    </a>
                    <a href="#" class="nav-item">
                        <span>üìà</span>
                        <span>Metrics</span>
                    </a>
                    <a href="#" class="nav-item">
                        <span>üìä</span>
                        <span>Analytics</span>
                    </a>
                </div>
                
                <div class="nav-section">
                    <div class="nav-section-title">Data Sources</div>
                    <a href="#" class="nav-item">
                        <span>üîå</span>
                        <span>Connections</span>
                    </a>
                    <a href="/addSource" class="nav-item">
                        <span>‚ûï</span>
                        <span>Add Source</span>
                    </a>
                </div>
                
                <div class="nav-section">
                    <div class="nav-section-title">Settings</div>
                    <a href="#" class="nav-item">
                        <span>üîî</span>
                        <span>Alerts</span>
                    </a>
                    <a href="#" class="nav-item">
                        <span>‚öôÔ∏è</span>
                        <span>Settings</span>
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <header class="top-nav">
                <div class="breadcrumb">
                    <span>MyGraf</span>
                    <span>/</span>
                    <span>Dashboard</span>
                </div>
                
                <div class="top-nav-right">
                    <input type="text" class="search-input" placeholder="Search metrics...">
                    <div class="user-menu">
                        <div class="user-avatar"></div>
                        <span>Alex Chen</span>
                    </div>
                </div>
            </header>

            <div class="dashboard-content">
                <div class="dashboard-header">
                    <div class="dashboard-title">
                        <div>
                            <h1>Dashboard Overview</h1>
                            <p style="color: var(--text-secondary);">Monitor your personal metrics in real-time</p>
                        </div>
                        <div class="dashboard-actions">
                            <button class="btn-icon">üîÑ</button>
                            <button class="btn-secondary">‚è±Ô∏è Last 7 days</button>
                            <button class="btn-primary">‚ûï Add Panel</button>
                        </div>
                    </div>
                </div>

                <!-- Stats Grid -->
                <div class="dashboard-grid">
                    <div class="stat-card">
                        <div class="stat-header">
                            <span class="stat-title">Daily Steps</span>
                            <div class="stat-icon blue">üëü</div>
                        </div>
                        <div class="stat-value">8,247</div>
                        <div class="stat-change positive">
                            <span>‚Üë</span>
                            <span>12% from last week</span>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-header">
                            <span class="stat-title">Active Hours</span>
                            <div class="stat-icon green">‚è±Ô∏è</div>
                        </div>
                        <div class="stat-value">6.5h</div>
                        <div class="stat-change positive">
                            <span>‚Üë</span>
                            <span>8% from last week</span>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-header">
                            <span class="stat-title">Calories Burned</span>
                            <div class="stat-icon orange">üî•</div>
                        </div>
                        <div class="stat-value">2,145</div>
                        <div class="stat-change negative">
                            <span>‚Üì</span>
                            <span>3% from last week</span>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-header">
                            <span class="stat-title">Sleep Quality</span>
                            <div class="stat-icon purple">üò¥</div>
                        </div>
                        <div class="stat-value">87%</div>
                        <div class="stat-change positive">
                            <span>‚Üë</span>
                            <span>5% from last week</span>
                        </div>
                    </div>
                </div>

                <!-- Chart Panel -->
                <div class="chart-panel">
                    <div class="panel-header">
                        <h3 class="panel-title">Activity Trends</h3>
                        <div class="time-range-selector">
                            <button class="time-range-btn">24h</button>
                            <button class="time-range-btn active">7d</button>
                            <button class="time-range-btn">30d</button>
                            <button class="time-range-btn">90d</button>
                        </div>
                    </div>
                    <div class="chart-container">
                        <canvas id="activityChart"></canvas>
                    </div>
                </div>

                <!-- Activity Table -->
                <div class="data-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Activity</th>
                                <th>Duration</th>
                                <th>Calories</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Oct 26, 2024</td>
                                <td>Morning Run</td>
                                <td>45 min</td>
                                <td>425 kcal</td>
                                <td><span class="badge badge-success">Completed</span></td>
                            </tr>
                            <tr>
                                <td>Oct 25, 2024</td>
                                <td>Cycling</td>
                                <td>60 min</td>
                                <td>520 kcal</td>
                                <td><span class="badge badge-success">Completed</span></td>
                            </tr>
                            <tr>
                                <td>Oct 24, 2024</td>
                                <td>Yoga</td>
                                <td>30 min</td>
                                <td>180 kcal</td>
                                <td><span class="badge badge-success">Completed</span></td>
                            </tr>
                            <tr>
                                <td>Oct 23, 2024</td>
                                <td>Weight Training</td>
                                <td>50 min</td>
                                <td>310 kcal</td>
                                <td><span class="badge badge-success">Completed</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script src="main.js"></script>
</body>
</html>